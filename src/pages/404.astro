---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
---

<BaseLayout pageTitle="404">
  <container class="max-w-[1100px] mx-auto flex flex-wrap m-3">
    <div class="flex-1 mr-4">
      <div class="flex-1 min-h-screen">
        <div class="text-center mt-16">
          <p class="text-9xl font-bold">404</p>
          <p class="text-2xl font-bold mt-2">Page not found</p>
          <p class="mt-4">ページが見つかりませんでした</p>
          <a href="/" class="text-blue-600 hover:underline mt-4 inline-block">トップページへ</a>
        </div>
      </div>
    </div>
    <div class="hidden md:block md:w-1/4 lg:w-1/3 max-w-[280px]">
        <Navigation />
    </div>
  </container>
</BaseLayout>